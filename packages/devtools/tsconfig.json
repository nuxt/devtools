{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@nuxt/devtools": ["../devtools/src/index.ts"],
      "@nuxt/devtools-kit": ["../devtools-kit/src/index.ts"],
      "@nuxt/devtools-kit/types": ["../devtools-kit/src/types/index.ts"],
      "@nuxt/devtools-kit/iframe-client": ["../devtools-kit/src/runtime/iframe-client.ts"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./client"
  ]
}
