{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@nuxt/devtools": ["./packages/devtools/src/index.ts"],
      "@nuxt/devtools/iframe-client": ["./packages/devtools/src/iframe-client.ts"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
